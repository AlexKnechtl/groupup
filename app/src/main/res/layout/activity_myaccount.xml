<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingRight="10dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:background="@color/colorBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/settings_bubble"
                android:elevation="4dp"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:backgroundTint="@color/textAppColor"
                    android:enabled="false"
                    android:focusable="false"
                    android:gravity="center_horizontal"
                    android:text="Meine Daten"
                    android:textColor="@color/textAppColor" />

                <Button
                    android:id="@+id/btn_changeName"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/colorAccent"
                    android:fontFamily="@font/dosis_bold"
                    android:gravity="start|center"
                    android:onClick="changeNameClick"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:text="@string/change_name"
                    android:textAllCaps="false"
                    android:textColor="@color/darkGray"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/btn_changeBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/colorAccent"
                    android:fontFamily="@font/dosis_bold"
                    android:gravity="start|center"
                    android:onClick="changeBirthdayClick"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:text="Change Birthday"
                    android:textAllCaps="false"
                    android:textColor="@color/darkGray"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/colorAccent"
                    android:fontFamily="@font/dosis_bold"
                    android:gravity="start|center"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:text="@string/business_kit"
                    android:textAllCaps="false"
                    android:textColor="@color/darkGray"
                    android:textSize="18sp"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>