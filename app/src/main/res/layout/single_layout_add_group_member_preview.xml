<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/single_layout_add_group_member_preview"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/add_group_member_preview_thumb"
        android:src="@drawable/profile_white_border"
        app:civ_border_color="@color/colorBackground"
        app:civ_border_width="1dp">
    </de.hdodenhof.circleimageview.CircleImageView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/unchecked_gray"
        app:civ_border_color="@color/colorBackground"
        app:civ_border_width="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/single_layout_add_group_member_preview"
        app:layout_constraintRight_toRightOf="@id/single_layout_add_group_member_preview">
    </de.hdodenhof.circleimageview.CircleImageView>
</android.support.constraint.ConstraintLayout>