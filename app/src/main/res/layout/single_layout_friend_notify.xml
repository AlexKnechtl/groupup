<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginLeft="28dp"
    android:layout_marginRight="28dp"
    android:layout_marginTop="12dp"
    android:background="@drawable/circle_design_interests"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/request_user_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:src="@drawable/profile_white" />

    <TextView
        android:id="@+id/request_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/dosis_semibold"
        android:text="King"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/ic_location"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignStart="@+id/request_user_name"
        android:layout_below="@+id/request_user_name"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/location_white" />

    <TextView
        android:id="@+id/request_user_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/request_user_picture"
        android:layout_toEndOf="@id/ic_location"
        android:fontFamily="@font/dosis_semibold"
        android:layout_marginStart="3dp"
        android:text="City"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <Button
        android:id="@+id/accept_friend_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="2dp"
        android:paddingBottom="2dp"
        android:fontFamily="@font/dosis_semibold"
        android:background="@drawable/transparent_button"
        android:text="@string/accept"
        android:textAllCaps="false"
        android:textSize="14sp" />
</RelativeLayout>