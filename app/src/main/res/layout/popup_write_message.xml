<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="320dp"
    android:layout_gravity="center"
    android:background="@drawable/assistant_bubble"
    android:orientation="vertical">

    <TextView
        android:id="@+id/popup_message_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Write a Message to the Group!"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/popup_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_message_headline"
        android:backgroundTint="@color/fui_transparent"
        android:hint="Write a message here"
        android:textColor="@color/darkGray"
        android:textCursorDrawable="@drawable/cursor_color" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/popup_message_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:backgroundTint="@color/colorAccent"
        android:scaleType="center"
        android:src="@drawable/material_done_white_36"
        android:tint="@color/colorRegistrate"
        app:backgroundTint="@color/darkGray"
        app:fabSize="mini" />
</RelativeLayout>