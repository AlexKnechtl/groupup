<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="15dp"
    card_view:cardBackgroundColor="@color/fui_transparent"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/group_headline"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/angle_bottom"
            android:maxLines="1"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="4dp"
            android:text="Sport"
            android:textColor="@color/colorAccent"
            android:textSize="22sp" />

        <LinearLayout
            android:id="@+id/linearLayoutGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="18dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/member_quantity_group"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_design_interests"
                android:gravity="center"
                android:text="10"
                android:textSize="28sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:text="Mitglieder"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/group_layout_tag_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_headline"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="32dp"
            android:layout_toStartOf="@id/group_layout_tag_3"
            android:background="@drawable/group_tag_design"
            android:fontFamily="@font/dosis_semibold"
            android:text="ThaliaBar"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/group_layout_tag_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_layout_tag_1"
            android:layout_marginStart="23dp"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@id/group_layout_tag_3"
            android:background="@drawable/group_tag_design"
            android:fontFamily="@font/dosis_semibold"
            android:text="Bollwerk"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/group_layout_tag_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/group_headline"
            android:layout_marginEnd="22dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/group_tag_design"
            android:fontFamily="@font/dosis_semibold"
            android:text="Bollwerk"
            android:textSize="15sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>