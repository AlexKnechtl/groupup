<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:weightSum="8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:clipChildren="false"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="24dp"
                android:src="@drawable/the_assistant" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/assistant_bubble"
                android:elevation="6dp"
                android:fontFamily="@font/dosis_bold"
                android:gravity="center"
                android:text="@string/which_group"
                android:textColor="@color/darkGray"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/new_group_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:onClick="selectFragment"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:layout_margin="12dp"
                android:background="@drawable/assistant_circle_design"
                android:elevation="5dp"
                android:fontFamily="@font/dosis_bold"
                android:gravity="center"
                android:text="1"
                android:textColor="@android:color/darker_gray"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/assistant_bubble"
                android:elevation="4dp"
                android:fontFamily="@font/dosis_bold"
                android:text="@string/new_group"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/same_group_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:onClick="selectFragment"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:layout_margin="12dp"
                android:background="@drawable/assistant_circle_design"
                android:elevation="5dp"
                android:fontFamily="@font/dosis_bold"
                android:gravity="center"
                android:text="2"
                android:textColor="@android:color/darker_gray"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/assistant_bubble"
                android:elevation="4dp"
                android:fontFamily="@font/dosis_bold"
                android:text="@string/same_group"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/show_friends_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:onClick="selectFragment"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:layout_margin="12dp"
                android:background="@drawable/assistant_circle_design"
                android:elevation="5dp"
                android:fontFamily="@font/dosis_bold"
                android:gravity="center"
                android:text="3"
                android:textColor="@android:color/darker_gray"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/assistant_bubble"
                android:elevation="4dp"
                android:fontFamily="@font/dosis_bold"
                android:text="@string/what_are_friends_doing"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/back_to_home"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginEnd="120dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:alpha="0.6"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back_interview" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="-20dp"
            android:text="@string/cancel"
            android:textColor="@android:color/darker_gray"
            android:textSize="30sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>