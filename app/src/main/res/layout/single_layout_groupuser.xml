<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="32dp"
    android:layout_marginRight="32dp"
    android:layout_marginTop="12dp"
    android:background="@drawable/circle_design_interests"
    android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:src="@drawable/default_user_black"/>

        <TextView
            android:id="@+id/username_groupview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/dosis_semibold"
            android:text="King"
            android:textColor="@color/colorAccent"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/user_location_groupview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/user_picture"
            android:layout_alignStart="@id/username_groupview"
            android:text=""
            android:drawableStart="@drawable/ic_location"
            android:fontFamily="@font/dosis_semibold"
            android:textColor="@color/colorAccent"/>
</RelativeLayout>