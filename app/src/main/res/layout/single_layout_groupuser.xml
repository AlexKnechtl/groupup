<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="32dp"
    android:layout_marginRight="32dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/circle_design_interests"
    android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:src="@drawable/profile_white"/>

        <TextView
            android:id="@+id/username_groupview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/dosis_semibold"
            android:text="King"
            android:textColor="@color/colorAccent"
            android:textSize="26sp" />

    <ImageView
        android:id="@+id/ic_location"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignStart="@+id/username_groupview"
        android:layout_below="@+id/username_groupview"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/location_white" />

    <TextView
        android:id="@+id/user_location_groupview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_picture"
        android:layout_toEndOf="@id/ic_location"
        android:fontFamily="@font/dosis_semibold"
        android:layout_marginStart="3dp"
        android:text="City"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />
</RelativeLayout>