<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/single_layout_add_group_member"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/add_member_single_thumb"
            android:src="@drawable/profile_white_border"
            app:civ_border_color="@color/colorBackground"
            app:civ_border_width="1dp">
        </de.hdodenhof.circleimageview.CircleImageView>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/checked_green"
            android:id="@+id/add_member_single_checked"
            app:civ_border_color="@color/colorBackground"
            app:civ_border_width="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/single_layout_add_group_member"
            app:layout_constraintRight_toRightOf="@id/single_layout_add_group_member">
        </de.hdodenhof.circleimageview.CircleImageView>
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/add_member_single_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="TextView"
            android:textColor="@color/colorBackground"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/add_member_single_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:text="TextView"
            android:visibility="gone"
            android:textColor="@color/colorBackground" />
    </LinearLayout>
</LinearLayout>