<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/group_chat_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/group_chat_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:elevation="3dp"
        app:cardBackgroundColor="#B183E9"
        app:cardCornerRadius="12dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr">

            <LinearLayout
                android:id="@+id/chat_company_reply_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/group_chat_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-3dp"
                    android:layout_marginStart="8dp"
                    android:text="Alexander Knechtl - Anfrage"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/group_chat_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"
                    android:autoLink="web"
                    android:fontFamily="sans-serif"
                    android:maxWidth="290dp"
                    android:text="Hey ihr zuckersüßen Mäuschen, wie gehts so?"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/request_accept_btn"
                android:layout_width="28dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@id/chat_company_reply_text"
                android:background="@color/fui_transparent"
                android:src="@drawable/material_more_vert_black_36"
                android:tint="@color/colorAccent"
                android:visibility="visible" />

            <TextView
                android:id="@+id/group_chat_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/chat_company_reply_text"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@id/chat_company_reply_text"
                android:text="17:10"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>